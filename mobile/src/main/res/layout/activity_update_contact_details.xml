<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"

        android:orientation="vertical"
        tools:context=".activity.UpdateContactDetails">


    <ImageView
            android:src="@drawable/iconimg"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="TODO"/>
    <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_margin="5dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:hint="Update Your Name"
                android:inputType="textPersonName"
                android:id="@+id/up_user_name"
                android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout

         android:layout_width="match_parent"
         android:layout_margin="5dp"

         style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
         android:layout_height="wrap_content">

  <com.google.android.material.textfield.TextInputEditText

          android:layout_width="match_parent"
          android:hint="Update Contact Number"
          android:inputType="textPersonName"
          android:id="@+id/up_contact_number"
          android:layout_height="wrap_content"/>

 </com.google.android.material.textfield.TextInputLayout>

    <TextView
            android:id="@+id/emer_contact_details_update"
            android:layout_margin="5sp"
            android:textSize="14sp"
            android:padding="5dp"
            android:textColor="#A1000000"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eup_mer_heading"
    />

 <com.google.android.material.textfield.TextInputLayout

         android:layout_width="match_parent"
         style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
         android:layout_height="wrap_content">

  <com.google.android.material.textfield.TextInputEditText

          android:layout_width="match_parent"
          android:hint="Contact Number 1"
          android:layout_margin="5dp"
          android:id="@+id/contact_1_update"
          android:layout_height="wrap_content"/>

 </com.google.android.material.textfield.TextInputLayout>

 <com.google.android.material.textfield.TextInputLayout

         android:layout_width="match_parent"
         style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
         android:layout_height="wrap_content">

  <com.google.android.material.textfield.TextInputEditText

          android:layout_width="match_parent"
          android:hint="Contact Number 2"
          android:layout_margin="5dp"
          android:id="@+id/contact_2_update"
          android:layout_height="wrap_content"/>

 </com.google.android.material.textfield.TextInputLayout>

 <com.google.android.material.textfield.TextInputLayout

         android:layout_width="match_parent"
         style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
         android:layout_height="wrap_content">

  <com.google.android.material.textfield.TextInputEditText

          android:layout_width="match_parent"
          android:hint="Contact Number 3"
          android:layout_margin="5dp"
          android:id="@+id/contact_3_update"
          android:layout_height="wrap_content"/>

 </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_margin="5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText

                    android:layout_width="match_parent"
                    android:hint="Update Your  Message That You Want To Send "
                    android:inputType="textMultiLine"
                    android:lines="5"
                    android:maxLines="3"

                    android:minLines="3"
                    android:scrollbars="vertical"
                    android:id="@+id/up_user_message"
                    android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>




        <Button
            android:text="Update Details"
            style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
            android:layout_gravity="start"
            android:id="@+id/update_contact_details"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


</LinearLayout>
</ScrollView>